
# Name of ROOT file yield/cross-section histograms will be read from:
#inputFileName: yield_phase3_VetoOption6.root

# Name of ROOT file output histograms will be written to:
#  This field is ignored if the above line is un-commented out.
outputFileName: yield_phase3_VetoOption6.root

#################################################################################
# DATA SELECTION:

primexPhase: 3

angularRange: 0.0 4.5

#Different options for the cut variations:
#  0. All default cuts applied
#  1. 3-d invariant mass matrix
#  2. FCAL cuts varied
#  5. TOF cuts varied
#  8. Photon angles are shifted/smeared for Coherent MC. For data, this is the same as if analysisOption=0
#
analysisOption: 0

# Veto option for default analysis (0-8)
#
vetoOption: 6

#
# Name of histogram to access from data root files:
# (note: this is only important if analysisOption is NOT 0 or 1)
#
#histName:   mgg_singleTOF
#matrixName: AngularMatrix_singleTOF

#lineshapeOffset: 0.0000

#################################################################################
# MC SELECTION (for lineshape of mgg spectrum and for angular matrix):
#   These are by default set equal to the above values (for data). But will be 
#   overwritten if they are uncommented.
#

#analysisOption_MC: 8
#vetoOption_MC:     6

#histName_MC: dirAngular/mgg_const_angularShift_07
#matrixName:  dirAngular/AngularMatrix_AngularShift_07

#################################################################################
# Model Used for Fitting Yield Distribution:

ModelType: SGEVORKYAN_AP_VAR
ModelParameter_ap: 4

#################################################################################
# BINNING:

rebinsMgg:   4
rebinsTheta: 8

fittingRange:      0.300 0.925
emptyFittingRange: 0.300 0.925

# Beam energy range:
# (note: This is only editable whenever analysisOption=1.
#   Otherwise, the beam energy range is fixed to 8.0-10.9 GeV for phase 1 and 8.0-11.3 GeV for phase 3)
#
beamEnergy: 8.0 11.3

#################################################################################
# FITTING OPTIONS:

#Different options for fitting the eta->2gamma signal:
#  1-2: f = N_eta*f_eta + N_etaPi*f_etaPi + N_bg*f_bg
#        1) Histogram for f_eta
#        2) Parameterized lineshape for f_eta
#  3:   f = N * [(1-f)*f_eta + f*(r*f_etaPi + (1-r)*f_etaPiPi)]
#  4-5: f = N * [(1-f)*f_eta + f*(w1*f_etaPi + w2*f_etaPiPi + w3*f_bg)]
#        4) Parameterized linshape for f_eta; histograms for all other terms
#        5) Parameterized lineshape for f_eta, f_etaPi, f_etaPiPi; histogram for f_bg
#
signalFitOption: 4

#Different options for fitting the smooth (EM) background:
#	0. Background fixed to zero (no additional background)
#	1. polynomial-squared
#	2. exponential function where only the normalization floats
#   3. exponential function where all 4 parameters float freely
#	4. Chebyshev Polynomial
#	5. Analytical approximation of e+e- background shape: dsigma/dM ~ (1/M)*(ln(2*E/M) - 0.5)
#
bkgdFitOption:   2
polynomialOrder: 2

#Different options for fitting the omega->pi0+gamma background:
#   0. No fit performed. However, if the specified fitting range exceeds mgg>0.725, this is changed to option 1.
#	1. Crystal Ball function
#	2. Fit simulated histogram to data
#	3. Extract parameterized lineshape from simulation and fit to data
#   4. Extract parameterized lineshape from simulation and fit to data - allowing width of lineshape to float
#
omegaFitOption:  2

#Different options for fitting the rho0 background:
#   0. Not included in fit.
#	1. Fit lineshape from rho0->gamma+pi0 and rho0->gamma+eta MC with floating normalization
#	2. Fit lineshape from rho0->gamma+pi0 and rho0->gamma+eta MC with relative normalization to omega fixed. (forces omegaFitOption=2)
#
rhoFitOption:  2

#Different options for fitting the omega->pi0+gamma background:
#	0. Don't try to fit eta' peak
#	1. Do try to fit it
#
etapFitOption:   0


# If the following parameter is set to 1, only the QF MC will be used to estimate the signal lineshape.
lineshapeOption: 0

#################################################################################
# EMPTY TARGET FITTING OPTIONS:

# [0: no fit to eta, 1: Gaussian, 2: lineshape]
#
emptyFitOption_eta: 2

# [0: no fit to omega, 1: Crystal Ball, 2: lineshape]
#
emptyFitOption_omega: 1

# [0: no fit to fdc peaks, 1: Gaussians, 2: lineshape with common normalization, 3: lineshape with separate normalizations]
#
emptyFitOption_fdc: 1

# [1: polynomial, 2: exponential, 3: chebyshev]
#
emptyFitOption_bkgd: 3
emptyFitOption_poly: 3

#################################################################################
