#################################################################################
# DATA SELECTION:

primexPhase: 3

angularRange: 0.0 4.5

#
#Different options for the cut variations:
#  0. All default cuts applied
#  1. 3-d invariant mass matrix
#  2. FCAL cuts varied
#  5. TOF cuts varied
#  8. Photon angles are shifted/smeared for Coherent MC. For data, this is the same as if analysisOption=0
#
analysisOption: 0

#
# Veto option for default analysis (0-8)
# (note: this is only important when using analysisOption=0)
#
vetoOption: 6

#
# Name of histogram to access from data and mc root files:
# (note: this is only important if analysisOption is NOT 0 or 1)
#
histName:   mgg_singleTOF
matrixName: AngularMatrix_singleTOF

#--------------------------------------------#
# other options:

#FCAL fiducial cut
#histName:   FidCut/mgg_FCAL_fid_12
#matrixName: FidCut/AngularMatrix_FCALFidCut_12

#FCAL energy cut
#histName:   ECut/mgg_FCAL_ecut_19
#matrixName: ECut/AngularMatrix_FCALECut_19

#FCAL extra energy cut:
#histName:   ExtraECut/mgg_FCAL_extra_ecut_04
#matrixName: ExtraECut/AngularMatrix_FCALExtraECut_04

#TOF strict veto:
#histName:   mgg_singleTOF
#matrixName: AngularMatrix_singleTOF

#TOF Timing cuts (ranges from 0.5ns to 2.25ns in 0.25ns increments, 0-7):
#histName:   TOFTimingCut/mgg_TOFTiming_00
#matrixName: TOFTimingCut/AngularMatrix_TOFTimingCut_00

#Smearing photon angles:
#matrixName: AngularMatrix_AngularSmear_06

#Shifting photon angles:
#matrixName: AngularMatrix_AngularShift_03

#Varying placement of elasticity cut on left side of peak:
# (00: 10sigma, 01: 7.5sigma, 02: 5sigma, 03: 4sigma, 04: 3sigma, 05: 2sigma, 06: 1sigma)
#histName:   mgg_Elasticity_00
#matrixName: AngularMatrix_Elasticity_00

#--------------------------------------------#

#
# Beam energy range:
# (note: This is only editable whenever analysisOption=1.
#   Otherwise, the beam energy range is fixed to 9.0-10.9 GeV)
#
beamEnergy: 8.0 11.3
#
# Binning:
#
rebinsHmass: 2
rebinsTheta: 5

#################################################################################
# FITTING OPTIONS:

#
#Different options for fitting the eta->2gamma signal:
#	1. single Gaussian function to describe eta signal
#	2. double Gaussian function
#	3. Crystal Ball function
#	4. Crystal Ball function + Gaussian
#	5. Use lineshape from MC to fit Eta
#	6. Use lineshape from MC to fit Eta + Additional Gaussian for inclusive background
#	7. Use lineshape from MC to fit Eta + lineshape of all backgrounds from bggen mc summed together
#	8. Use lineshape from MC to fit Eta + histogram of all backgrounds from bggen mc summed together
#	9. Use lineshape from MC to fit Eta + lineshape of eta+pion background from bggen mc + histogram of additional backgrounds
#  10. Use histogram from MC to fit Eta + histogram of eta+pion background from bggen mc + histogram of additional backgrounds
#  11. Same as above, but the normalization parameters for the background are the amount we have to scale the bggen cross secttions by.
#  12. Same as above, but with eta+2pion treated separately.
#
signalFitOption: 11

#
# Parameter to decide where to get lineshape for fitting invariant mass
#   0. Coherent Grid MC
#   1. BGGEN
# (Only used for signalFitOptions 5+)
#
lineshapeOption: 0

#
#Different options for fitting the eta->2gamma background:
#	1. 3rd-order polynomial
#	2. exponential function
#	3. Chebyshev Polynomial
#	4. Background fixed to zero (no additional background)
#	5. Use lineshape of empty target + Additional exponential
#
bkgdFitOption:   1
polynomialOrder: 2

#
#Different options for fitting the omega->pi0+gamma background:
#   0. No fit performed. However, if the specified fitting range exceeds mgg>0.725, this is changed to option 1.
#	1. Crystal Ball function
#	2. Lineshape from MC is fitted to 2 crystal balls, and that function is used in subsequent fits
#	3. Use lineshape from MC to fit Omega
#	4. Use lineshapes from MC to fit Omega and Rho
#   5. Fit simulated lineshape with 2 crystal balls.
#	   Then, use these parameters as guess for the omega peak in the data, allowing normalization and shift to float
#
omegaFitOption:  0

#
#Different options for fitting the omega->pi0+gamma background:
#	0. Don't try to fit eta' peak
#	1. Do try to fit it
#
etapFitOption:   1


fittingRange: -0.195 0.15

#################################################################################
#
# This card determines whether or not the empty target background
# is subtracted before fitting is done.
#
subtractEmptyTarget: 0

#
# The following switch determines whether the pdf of the empty target is obtained by fitting
# If the above card is 1, then the remaining cards are trivial.
#
fitEmptyTarget: 1

#################################################################################
#
# [0: no fit to eta, 1: Gaussian, 2: lineshape]
#
emptyFitOption_eta: 1

#
# [0: no fit to omega, 1: Crystal Ball, 2: lineshape]
#
emptyFitOption_omega: 1

#
# [0: no fit to fdc peaks, 1: Gaussians, 2: lineshape with common normalization, 3: lineshape with separate normalizations]
#
emptyFitOption_fdc: 1

#
# [1: polynomial, 2: exponential, 3: chebyshev]
#
emptyFitOption_bkgd: 2
emptyFitOption_poly: 4

emptyFittingRange: -0.205 0.505

rebinsEmptyHmass: 4

#################################################################################
